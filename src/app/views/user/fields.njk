<div class="item">
  <div>Nome</div>
  <div class="input">
    <input type="text" name="name" placeholder="Nome completo" value="{{user.name}}" required>
  </div>
</div>

<div class="item">
  <div>E-mail</div>
  <div class="input">
    <input
      type="email"
      name="email"
      placeholder="E-mail"
      value="{{user.email}}"
      onblur="Validate.apply(this, 'isEmail')"
      >
  </div>
</div>

<div class="item">
  <div>Senha</div>
  <div class="input">
    <input type="password" name="password" placeholder="Digite uma senha" value="{{user.password}}">
  </div>
</div>

{% if not user.id %}

  <div class="item">
    <div>Repita a senha</div>
    <div class="input">
      <input type="password" name="passwordRepeat" placeholder="senha">
    </div>
  </div>

{% endif %}

<div class="item">
  <div>CPF ou CNPJ</div>
  <div class="input">
    <input 
      type="text"
      name="cpf_cnpj"
      placeholder="Somente números"
      value="{{user.cpf_cnpj}}"
      onkeydown="Mask.apply(this, 'cpfCnpj')"  
      onblur="Validate.apply(this, 'isCpfCnpj')"
    >
  </div>
</div>

<div class="item">
  <div>Cep</div>
  <div class="input">
    <input 
      type="text"
      name="cep"
      placeholder="99999-999"
      value="{{user.cep}}"
      onkeydown="Mask.apply(this, 'cep')"
      onblur="Validate.apply(this, 'isCep')"
    >
  </div>
</div>

<div class="item">
  <div>Endereço</div>
  <div class="input">
    <input type="text" name="address" placeholder="Digite a rua ou avenida" value="{{user.address}}">
  </div>
</div>
